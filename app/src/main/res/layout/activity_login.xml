<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat datang di"
            android:textAllCaps="true"
            android:textColor="@color/d_blue_1"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bisadiatur Mobile"
            android:textColor="@color/d_blue_1"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/logo_b" />

        <Button
            android:id="@+id/btnProsesLogin"
            android:backgroundTint="@color/d_blue_1"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:text="Masuk" />

        <Button
            android:id="@+id/btnProsesRegister"
            android:layout_marginTop="10dp"
            android:textColor="@color/d_blue_1"
            android:backgroundTint="@color/white"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:text="Daftar" />

    </LinearLayout>

</RelativeLayout>